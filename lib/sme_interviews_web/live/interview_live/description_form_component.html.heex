<div>
  <.form
    let={f}
    for={@changeset}
    id={@id}
    phx-target={@myself}
    phx-change="save">
  
    <.form_field
      type="textarea"
      form={f}
      field={:description}
      placeholder="Enter a Description"
      phx_debounce="blur" 
    />
  
    <.button type="submit" color="success" label="Save" />
  </.form>
</div>