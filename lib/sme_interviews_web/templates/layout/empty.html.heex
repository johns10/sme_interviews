<div class="min-h-screen overflow-auto dark:bg-gray-900"> 
  <.container max_width="full">
    <.alert
      color="info"
      class="mb-5"
      label={live_flash(@flash, :info)}
      phx-click="lv:clear-flash"
      phx-value-key="info"
    />

    <.alert
      color="danger"
      class="mb-5"
      label={live_flash(@flash, :error)}
      phx-click="lv:clear-flash"
      phx-value-key="error"
    />

    <%= @inner_content %>
  </.container>
</div>